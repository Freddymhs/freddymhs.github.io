---
import { ViewTransitions } from "astro:transitions";
import BaseHead from "../components/atomic/atoms/BaseHead.astro";
import Header from "../components/atomic/molecules/Header.astro";
import Top from "../components/atomic/molecules/Top.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

const currentPath = Astro.url.pathname.includes("blog");
---

<html lang="en">
  <head>
    <ViewTransitions />
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <!-- Contenedor para la imagen de fondo -->
    <div class="html-background"></div>

    <div class="content">
      {
        !currentPath && (
          <header>
            <Top />
          </header>
        )
      }
      <main class="main-content">
        <slot />
      </main>

      <Header />
    </div>
    <br />
    <br />
    <br />
  </body>
</html>
