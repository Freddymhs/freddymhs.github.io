---
import PagesLayout from "../layouts/PagesLayout.astro";
---

<PagesLayout title="Redes">
  <div class="in-row">
    <a
      class="linkedin"
      target="_blank"
      href="https://www.linkedin.com/in/fmarcosdev/"></a>
    <a class="github" target="_blank" , href="https://github.com/Freddymhs"></a>
    <a
      class="codepen"
      target="_blank"
      href="https://codepen.io/unfixed92/collections/"></a>
  </div>
</PagesLayout>

<style>
  .in-row {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }
  .linkedin {
    background-color: #47c5fb;
    width: 21vw;
    height: 55vh;
    transition: 0.3s;
    min-width: 144px;
    &:hover {
      cursor: pointer;
      width: 34vw;
      height: 55vh;
      transition: 0.8s;
    }
    background-image: url("../../public/logo-linkedin.svg");
    background-repeat: no-repeat;
    background-position: center;
  }
  .github {
    background-color: #8957e5;
    width: 21vw;
    height: 55vh;
    transition: 0.3s;
    min-width: 144px;
    &:hover {
      cursor: pointer;
      width: 34vw;
      height: 55vh;
      transition: 0.8s;
    }
    background-image: url("../../public/logo-github.svg");
    background-repeat: no-repeat;
    background-position: center;
  }
  .codepen {
    background-color: #eff3f4;
    width: 21vw;
    height: 55vh;
    transition: 0.3s;
    min-width: 144px;
    &:hover {
      cursor: pointer;
      width: 34vw;
      height: 55vh;
      transition: 0.8s;
    }
    background-image: url("../../public/logo-codepen.svg");
    background-repeat: no-repeat;
    background-position: center;
  }
  /* position of the inside icon  */
  .linkedin .github .codepen {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  svg {
    &:hover {
      border-bottom: 5px solid #fff;
      transition: all 0.2s ease-in-out;
      cursor: pointer;
    }
  }

  @property --border-angle {
    syntax: "<angle>";
    inherits: true;
    initial-value: 0turn;
  }
</style>
